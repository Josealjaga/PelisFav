
.favorites-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx 0;
  box-sizing: border-box;
}


.favorites-list > view {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}


.favorites-list movie-card {
  width: 90%;
  max-width: 600rpx;
  transform: scale(1.1); 
}